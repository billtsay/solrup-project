<?xml version="1.0"?>
<scxml xmlns="http://www.w3.org/2005/07/scxml"
       version="1.0"
       initial="initialize">

    <state id="initialize">
        <transition event="instantiate"   target="instantiate"/>
        <transition event="synchronize"   target="synchronize"/>
    </state>

    <state id="instantiate">
        <onentry>
            <send event="persist" />
        </onentry>
        <transition event="materialize"   target="materialize"/>
        <transition event="request"    target="request"/>
    </state>

    <state id="synchronize">
        <onentry>
            <send event="persist" />
        </onentry>
    </state>

    <state id="materialize">
        <onentry>
            <send event="persist" />
        </onentry>
        <transition event="destantiate" target="destantiate"/>
        <transition event="modify"    target="modify"/>
    </state>

    <state id="modify">
        <onentry>
            <send event="persist" />
        </onentry>
        <transition event="materialize"   target="materialize"/>
    </state>

    <state id="request">
        <onentry>
            <send event="persist" />
        </onentry>
        <transition event="approve"   target="approve"/>
    </state>

    <state id="approve">
        <onentry>
            <send event="persist" />
        </onentry>
        <transition event="materialize"   target="materialize"/>
    </state>

    <state id="destantiate">
        <onentry>
            <send event="persist" />
        </onentry>
        <transition event="delete"   target="remove"/>
    </state>

    <state id="remove">
        <onentry>
            <send event="persist" />
        </onentry>
    </state>


</scxml>
