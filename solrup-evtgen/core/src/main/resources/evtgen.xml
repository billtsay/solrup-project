<scxml xmlns="http://www.w3.org/2005/07/scxml"
       version="1.0"
       initial="reset">

    <state id="reset">
        <transition event="evtgen.start"   target="running"/>
    </state>

    <state id="running">
        <transition event="evtgen.split"   target="paused"/>
        <transition event="evtgen.stop"    target="stopped"/>
    </state>

    <state id="paused">
        <transition event="evtgen.unsplit" target="running"/>
        <transition event="evtgen.stop"    target="stopped"/>
    </state>

    <state id="stopped">
        <transition event="evtgen.reset"   target="reset"/>
    </state>

</scxml>

